        signingkey = ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQDfIPz7kxyQ5DUSfDvk7gWAt5axQmBaN+5LGFwWSUE$

[core]
        excludesfile = ~/.gitignore_global

